<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dslv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/dragsidebar_bk"
    android:background="@color/video_controlbar_bk" >
	<com.king.lib.listview.DragSortListView 
        android:id="@+id/playlist_listview"
	    android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:dividerHeight="@dimen/playlist_divider_height"
    	android:divider="@color/playlist_divider"
    	android:scrollbars="none"
	    dslv:drag_enabled="true"
	    dslv:collapsed_height="2dp"
	    dslv:drag_scroll_start="0.33"
	    dslv:max_drag_scroll_speed="0.5"
	    dslv:float_alpha="0.6"
	    dslv:slide_shuffle_speed="0.3"
	    dslv:track_drag_sort="false"
	    dslv:use_default_controller="false"
	    dslv:float_background_color="@color/video_controlbar_bk"/>

</RelativeLayout>
