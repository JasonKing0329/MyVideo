<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:myvideo="http://schemas.android.com/apk/res/com.king.app.video"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" 
    android:paddingTop="@dimen/video_list_item_padding_ver"
    android:paddingBottom="@dimen/video_list_item_padding_ver"
    android:paddingLeft="@dimen/video_list_item_padding_hor"
    android:paddingRight="@dimen/video_list_item_padding_hor"
    android:gravity="center_vertical">
    <CheckBox 
        android:id="@+id/video_list_check"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:visibility="gone"
	    android:focusable="false"
	    android:focusableInTouchMode="false"
	    android:clickable="false"/>
    <ImageView 
        android:id="@+id/video_list_thumb"
	    android:layout_width="@dimen/video_list_thumb_width"
	    android:layout_height="@dimen/video_list_thumb_height"
	    android:scaleType="fitXY"/>
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="@dimen/video_list_content_left_margin"
	    android:orientation="vertical">
	    <TextView 
	        android:id="@+id/video_list_name"
		    android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:textSize="@dimen/video_list_item_text_size"/>
		<LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="@dimen/video_list_content_top_margin"
		    android:orientation="horizontal">
		    
		    <TextView 
		        android:id="@+id/video_list_duration"
			    android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
	    		android:textSize="@dimen/video_list_item_text_size"/>
		    <View 
			    android:layout_width="0dp"
		    	android:layout_height="wrap_content"
		    	android:layout_weight="1"/>
		    <TextView 
		        android:id="@+id/video_list_size"
			    android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
	    		android:textSize="@dimen/video_list_item_text_size"/>
		</LinearLayout>
	    <TextView 
	        android:id="@+id/video_list_path"
		    android:layout_marginTop="@dimen/video_list_content_top_margin"
		    android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:textSize="@dimen/video_list_item_text_size_small"/>
	    <com.king.app.video.customview.StarScoreView 
	        android:id="@+id/video_list_starview"
		    android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	myvideo:starNumber="10"
	    	myvideo:starMaxScore="10"
	    	myvideo:starSize="@dimen/video_list_star_size"
	    	myvideo:starLeftMargin="@dimen/video_list_star_left_margin"
	    	myvideo:starOnDrawable="@drawable/video_star_on"
	    	myvideo:starOffDrawable="@drawable/video_star_off"
	    	android:layout_marginTop="@dimen/video_list_content_top_margin"/>
	</LinearLayout>
</LinearLayout>
