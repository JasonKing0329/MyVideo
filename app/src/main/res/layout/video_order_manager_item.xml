<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="15dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingRight="15dp"
    android:gravity="center_vertical" >
    
    <CheckBox 
        android:id="@+id/video_order_manager_item_check"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:focusable="false"
	    android:focusableInTouchMode="false"
	    android:visibility="gone"/>
    <ImageView 
        android:id="@+id/video_order_manager_item_drag_ctrl"
	    android:layout_width="@dimen/video_ordermanager_dragctrl_width"
	    android:layout_height="@dimen/video_ordermanager_dragctrl_width"
	    android:layout_alignParentRight="true"
	    android:scaleType="fitXY"
	    android:src="@drawable/video_list_drag_ctrl"/>
    <TextView 
        android:id="@+id/video_order_manager_item_title"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="10dp"
	    android:layout_toRightOf="@id/video_order_manager_item_check"
	    android:layout_toLeftOf="@id/video_order_manager_item_drag_ctrl"
	    android:gravity="center_vertical"
	    android:textSize="20sp"/>

</RelativeLayout>
